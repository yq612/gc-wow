@import "variables.css";

@font-face {
  font-family: "<%= fontFamily %>";
  src: url("/fonts/<%= fontFamily %>-Light.ttf");
  font-weight: 100;
}
@font-face {
  font-family: "<%= fontFamily %>";
  src: url("/fonts/<%= fontFamily %>-Regular.ttf");
  font-weight: 400;
}

@font-face {
  font-family: "<%= fontFamily %>";
  src: url("/fonts/<%= fontFamily %>-Bold.ttf");
  font-weight: 700;
}
body,
button,
input,
select,
textarea {
  font-family: "<%= fontFamily %>", sans-serif;
  font-weight: normal;
  font-size: var(--font-size-base);
  line-height: var(--line-height-base:)
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-size: 100%;
}
em,
b {
  font-style: normal;
}
a {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
img {
  border: 0;
}
button,
input,
select,
textarea {
  font-size: 100%;
  outline: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
td,
th,
ul,
ol {
  padding: 0;
  list-style-type: n;
}
* {
  box-sizing: border-box;
  margin: 0;
}
body {
  background: white;
  color: #333333;
}
html {
  scroll-behavior: smooth;
}
.container {
  width: 1200px;
  margin: 0 auto;
  position: relative;
}
.highlight {
  color: var(--color-primary);
}
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.section-title {
  font-size: 58px;
  line-height: 122px;
  text-align: center;
  font-weight: bold;
  position: relative;
  color: rgba(51, 51, 51, 1);
  margin: 0 auto;
}
#nprogress .bar {
  background: var(--color-primary) !important;
}
.swing {
  animation: swing 3s ease infinite;
}
@keyframes swing {
  0%,
  100% {
    transform: scale(1) rotate(0);
  }
  10%,
  30% {
    transform: scale(0.95) rotate(2deg);
  }
  20%,
  40%,
  60%,
  80% {
    transform: scale(1.03) rotate(-2deg);
  }
  50%,
  70% {
    transform: scale(1.03) rotate(2deg);
  }
}
/* 移动设备样式 */
@media only screen and (max-width: 768px) {
  .part{
    overflow: hidden;
  }
  .container {
    width: 100%;
  }
  .section-title{
    font-size: 43px!important;
  }
}
