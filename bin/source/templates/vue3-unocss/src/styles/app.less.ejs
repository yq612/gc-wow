@font-face {
  font-display: swap;
  font-family: '<%= fontFamily %>';
  src:
    url('/fonts/<%= fontFamily %>-Light.woff2') format('woff2'),
    url('/fonts/<%= fontFamily %>-Light.woff') format('woff');
  font-weight: 100;
}
@font-face {
  font-display: swap;
  font-family: '<%= fontFamily %>';
  src:
    url('/fonts/<%= fontFamily %>-Regular.woff2') format('woff2'),
    url('/fonts/<%= fontFamily %>-Regular.woff') format('woff');
  font-weight: 400;
}

@font-face {
  font-display: swap;
  font-family: '<%= fontFamily %>';
  src:
    url('/fonts/<%= fontFamily %>-Bold.woff2') format('woff2'),
    url('/fonts/<%= fontFamily %>-Bold.woff') format('woff');
  font-weight: 700;
}
body,
button,
input,
select,
textarea {
  text-transform: none;
  font-family: '<%= fontFamily %>', sans-serif;
  font-weight: normal;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-size: 100%;
}
em,
b {
  font-style: normal;
}
a {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
img {
  border: 0;
}
button,
input,
select,
textarea {
  font-size: 100%;
  outline: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
td,
th,
ul,
ol {
  padding: 0;
  list-style-type: n;
}
* {
  box-sizing: border-box;
  margin: 0;
}
#nprogress .bar {
  background: var(--primary-color) !important;
}
#app {
  height: 100%;
  position: relative;
  overflow-x: hidden;
  background: white;
}

::-webkit-scrollbar {
  width: 0;
  background: transparent;
}

.area {
  width: 1200px;
  margin: 0 auto;
  position: relative;
}

@media only screen and (max-width: 768px) {
  .area {
    width: 100%;
  }
}
